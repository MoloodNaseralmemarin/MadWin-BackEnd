﻿@using MadWin.Core.DTOs.DisCounts
@model AddDiscountForAdminViewModel
@{
}
<div class="container" dir="rtl">
    <div class="card my-3">
        <div class="card-body">
            <h4 class="card-title mb-3">ثبت کد تخفیف جدید</h4>

            <form method="post" class="row g-3">
                <!-- نوع سفارش -->
                <div class="col-12">
                    <label class="form-label">نوع سفارش</label>
                    <select asp-for="Item" class="form-select" aria-label="نوع سفارش">
                        <option value="O">سفارش با اندازه دلخواه</option>
                        <option value="F">سفارش آماده</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Item"></span>
                </div>

                <!-- درصد، کد، تعداد قابل استفاده -->
                <div class="col-12 col-md-4">
                    <label asp-for="DiscountCode" class="form-label"></label>
                    <input type="number" step="0.01" min="0" class="form-control" asp-for="DiscountCode" id="DiscountCode" />
                    <span class="text-danger" asp-validation-for="DiscountCode"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Percentage" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Percentage" />
                    <span class="text-danger" asp-validation-for="Percentage"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="InitialCount" class="form-label"></label>
                    <input type="number" min="0" class="form-control" asp-for="InitialCount" />
                    <span class="text-danger" asp-validation-for="InitialCount"></span>
                </div>

                <!-- تاریخ شروع و پایان -->
                <!-- تاریخ شروع -->
                <div class="col-md-6">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input class="form-control" type="text" asp-for="StartDate" id="startDate" name="startDate" />
                </div>

                <!-- تاریخ پایان -->
                <div class="col-md-6">
                    <label asp-for="ExpiryDate" class="form-label"></label>
                    <input class="form-control" type="text" asp-for="ExpiryDate" id="expiryDate" name="expiryDate"/>
                </div>

                <!-- دکمه‌ها -->
                <div class="col-12 d-flex gap-2 justify-content-start">
                    <input type="submit" class="btn btn-success" value="ذخیره اطلاعات" />
                    <a class="btn btn-outline-info">پاک کردن</a>
                    <a class="btn btn-primary" data-bs-toggle="tooltip" title="مشاهده لیست محصولات درج شده">بازگشت به فهرست</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#startDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true,
                initialValueType: 'persian',
                calendar: {
                    persian: { locale: 'fa', leapYearMode: 'algorithmic' }
                },
                onSelect: function (unixDate) {
                    // تبدیل به تاریخ شمسی
                    const pDate = new persianDate(unixDate);

                    // استخراج سال/ماه/روز به صورت دستی (بدون درنظر گرفتن زمان)
                    const g = pDate.toGregorian();

                    // ایجاد تاریخ میلادی بدون timezone
                    const fixedDate = new Date(Date.UTC(g.year, g.month - 1, g.day));

                    // خروجی نهایی yyyy-MM-dd
                    const isoDate = fixedDate.toISOString().split('T')[0];

                    // ثبت در فیلد hidden برای ارسال به سرور
                    $('#StartDate').val(isoDate);
                }
            });
        });

          $(function () {
            $('#expiryDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true,
                initialValueType: 'persian',
                minDate: new persianDate().unix(), // 👈 جلوگیری از انتخاب روزهای قبل از امروز
                calendar: {
                    persian: { locale: 'fa', leapYearMode: 'algorithmic' }
                },
                onSelect: function (unixDate) {
                    const pDate = new persianDate(unixDate);
                    const g = pDate.toGregorian();

                    // ایجاد تاریخ میلادی بدون timezone برای جلوگیری از اختلاف روز
                    const fixedDate = new Date(Date.UTC(g.year, g.month - 1, g.day));

                    // خروجی نهایی yyyy-MM-dd
                    const isoDate = fixedDate.toISOString().split('T')[0];

                    // ثبت در فیلد hidden برای ارسال به سرور
                    $('#ExpiryDate').val(isoDate);
                }
            });
        });
    </script>
}
