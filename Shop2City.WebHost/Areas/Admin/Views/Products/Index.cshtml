@using MadWin.Core.DTOs.Products
@using Shop2City.Core.Convertors
@model ProductForAdminViewModel
@{
    ViewBag.Title = "لیست محصولات";
    var currentFilter = (Context.Request.Query["filterTitleProduct"].ToString() ?? "");
    int visiblePages = 3; // تعداد صفحات قبل و بعد از صفحه فعلی
    int startPage = Math.Max(Model.CurrentPage - visiblePages, 1);
    int endPage = Math.Min(Model.CurrentPage + visiblePages, Model.CountPage);
}


<div class="row">
    <div class="col-lg-12">
        <div class="card p-3">
            <h4 class="mb-3">لیست محصولات</h4>
            <!-- نمایش به صورت جدول در دسکتاپ -->
            <div class="table-responsive-md d-none d-md-block">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>تاریخ ویرایش</th>
                            <th>عنوان</th>
                            <th>قیمت</th>
                            <td>تعداد محصول فروخته شده</td>
                            <td>موجود/ناموجود</td>
                            <th>ویرایش</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.LastUpdateDate.ToShamsi()</td>
                                <td>@item.Title</td>
                                <td>@item.Price.ToString("N0") ریال</td>
                                <td>@item.FactorCount</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               @(item.IsStatus ? "checked" : "")
                                               onchange="editIsStatusProduct(this, @item.ProductId)">
                                    </div>
                                </td>


                                <td class="text-center">
                                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.ProductId">
                                        <i class="fas fa-edit text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- نمایش به صورت کارت در موبایل -->
            <div class="d-block d-md-none">
                @foreach (var item in Model.Products)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text"><strong>قیمت:</strong>@item.Price.ToString("N0") ریال</p>
                            <p class="card-text"><strong>تعداد فروخته شده:</strong> @item.FactorCount</p>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                <a asp-controller="CommissionRates" asp-action="Edit" asp-route-id="@item.ProductId">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>

        <!-- صفحه‌بندی -->
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm flex-wrap justify-content-center mt-3">
                @* دکمه صفحه قبل *@
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Products", new { area = "Admin", pageId = Model.CurrentPage - 1, filterFirstName = currentFilter })">قبل</a>
                </li>

                @* صفحات وسطی *@
                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Products", new { area = "Admin", pageId = i, filterFirstName = currentFilter })">@i</a>
                    </li>
                }

                @* دکمه صفحه بعد *@
                <li class="page-item @(Model.CurrentPage == Model.CountPage ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Products", new { area = "Admin", pageId = Model.CurrentPage + 1, filterFirstName = currentFilter })">بعد</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script src="~/js/products/editStatusProduct.js"></script>
}

