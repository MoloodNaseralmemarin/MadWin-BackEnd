@using Shop2City.WebHost.ViewModels.CurtainComponents
@model CurtainComponentEditViewModel
@{
    ViewData["Title"] = "ویرایش موارد مصرفی";
}

<div class="container py-4" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold mb-1">ویرایش @Model.Name</h4>
                    </div>

                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <!-- Name -->
                            <div class="col-12">
                                <label asp-for="Name" class="form-label fw-semibold">نام مؤلفه</label>
                                <input asp-for="Name" class="form-control form-control-lg" type="text" required placeholder="نام مؤلفه را وارد کنید..." />
                                <div class="invalid-feedback">
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>

                            <!-- Cost -->
                            <div class="col-12 col-md-6">
                                <label asp-for="Cost" class="form-label fw-semibold">هزینه (به ریال)</label>
                                <div class="input-group">
                                    <span class="input-group-text">ریال</span>
                                    <input asp-for="Cost"
                                           id="Cost"
                                           class="form-control text-end"
                                           type="number"
                                           inputmode="decimal"
                                           min="0"
                                           placeholder="مثلاً 7500000"
                                           required
                                           autocomplete="off"/>
                                </div>
                                <div id="CostPreview" class="form-text text-primary mt-2 fw-semibold"></div>
                                <div class="invalid-feedback d-block">
                                    <span asp-validation-for="Cost"></span>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-center mt-4">
                                <a asp-action="Index" class="btn btn-outline-secondary w-100 w-md-auto mb-2 mb-md-0 px-4 py-2">
                                    <i class="bi bi-x-circle me-1"></i> انصراف
                                </a>

                                <button type="submit" id="submitBtn" class="btn btn-success w-100 w-md-auto px-4 py-2">
                                    <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                                    <i class="bi bi-check-circle me-1"></i> ثبت تغییرات
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="mt-3 small text-muted text-center">
                        نکته: فیلدهای ضروری با پیام خطا مشخص می‌شوند.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <script>
        // نمایش زنده مبلغ به ریال و تومان
        const input = document.getElementById("Cost");
        const preview = document.getElementById("CostPreview");

        input.addEventListener("input", () => {
            const value = parseInt(input.value.replace(/,/g, ""));
            if (!isNaN(value) && value > 0) {
                const toman = Math.floor(value / 10); // هر 10 ریال = 1 تومان
                const formattedRial = value.toLocaleString('fa-IR');
                const formattedToman = toman.toLocaleString('fa-IR');
                preview.innerHTML = `💰 ${formattedRial} ریال معادل ${formattedToman} تومان`;
            } else {
                preview.innerHTML = "";
            }
        });

        // اعتبارسنجی Bootstrap + Spinner
        (function () {
            'use strict';
            const form = document.querySelector('.needs-validation');
            const btn = document.getElementById('submitBtn');
            const spinner = document.getElementById('submitSpinner');

            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                } else {
                    btn.disabled = true;
                    spinner.classList.remove('d-none');
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}
