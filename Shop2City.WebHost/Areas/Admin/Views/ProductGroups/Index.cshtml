@using MadWin.Core.DTOs.ProductGroups
@model ProductGroupForAdminDto

@{
    ViewBag.Title = "لیست گروه بندی";
    var currentFilter = (Context.Request.Query["filterTitleProduct"].ToString() ?? "");
    int visiblePages = 3; // تعداد صفحات قبل و بعد از صفحه فعلی
    int startPage = Math.Max(Model.CurrentPage - visiblePages, 1);
    int endPage = Math.Min(Model.CurrentPage + visiblePages, Model.CountPage);
}

<div class="row">
    <div class="col-lg-12">
        <div class="card p-3">
            <h4 class="mb-3">لیست محصولات</h4>

            <!-- نمایش به صورت جدول در دسکتاپ -->
            <div class="table-responsive-md d-none d-md-block">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ParentId</th>
                            <th>عنوان</th>
                            <th>ویرایش</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var group in Model.ProductGroups.GroupBy(g => g.ParentId))
                        {
                            <tr class="table-secondary">
                                <td colspan="3"><strong>ParentId: @group.Key</strong></td>
                            </tr>
                            @foreach (var item in group)
                            {
                                <tr>
                                    <td>@item.ParentId</td>
                                    <td>@item.Title</td>
                                    <td class="text-center">
                                        <a asp-controller="CommissionRates" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-edit text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- نمایش به صورت کارت در موبایل -->
            <div class="d-block d-md-none">
                @foreach (var group in Model.ProductGroups.GroupBy(g => g.ParentId))
                {
                    <div class="mb-2">
                        <h6 class="fw-bold">ParentId: @group.Key</h6>
                        @foreach (var item in group)
                        {
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        <a asp-controller="CommissionRates" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

        </div>

        <!-- صفحه‌بندی -->
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm flex-wrap justify-content-center mt-3">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", "ProductGroups", new { area = "Admin", pageId = Model.CurrentPage - 1, filterTitleProduct = currentFilter })">قبل</a>
                </li>

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", "ProductGroups", new { area = "Admin", pageId = i, filterTitleProduct = currentFilter })">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.CountPage ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", "ProductGroups", new { area = "Admin", pageId = Model.CurrentPage + 1, filterTitleProduct = currentFilter })">بعد</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
