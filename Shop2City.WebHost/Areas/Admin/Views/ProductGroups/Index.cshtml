@using MadWin.Core.DTOs.ProductGroups
@model ProductGroupForAdminDto

@{
    ViewBag.Title = "لیست گروه‌های محصول";
    var row = 1;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card p-3">
            <h4 class="mb-3">لیست گروه‌های محصول</h4>

            <!-- نمایش دسکتاپ -->
            <div class="table-responsive-md d-none d-md-block">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>عنوان گروه</th>
                            <th>زیرگروه‌ها</th>
                            <th class="text-center">ویرایش</th>
                            <th class="text-center">حذف</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductGroups.Where(pg => pg.ParentId == null))
                        {
                            <tr>
                                <td>@row</td>
                                <td class="fw-bold">@item.Title</td>

                                <td>
                                    @foreach (var sub in Model.ProductGroups.Where(pg => pg.ParentId == item.Id))
                                    {
                                        <div class="ms-3 border-start ps-3 mb-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span>@sub.Title</span>
                                         @*        <div class="btn-group btn-group-sm">
                                                  
                                                    <a href="/Admin/ProductGroups/Edit/@sub.Id" class="btn btn-warning" title="ویرایش"><i class="fa fa-edit"></i></a>
                                                    <a href="/Admin/ProductGroups/Delete/@sub.Id" class="btn btn-danger" title="حذف"><i class="fa fa-remove"></i></a>
                                                </div> *@
                                            </div>

                                            @foreach (var sub2 in Model.ProductGroups.Where(pg => pg.ParentId == sub.Id))
                                            {
                                                <div class="ms-4 border-start ps-3 mt-1 small">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span>@sub2.Title</span>
                                                     @*    <div class="btn-group btn-group-sm">
                                                            <a href="/Admin/ProductGroups/Edit/@sub2.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                                            <a href="/Admin/ProductGroups/Delete/@sub2.Id" class="btn btn-danger"><i class="fa fa-remove"></i></a>
                                                        </div> *@
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/ProductGroups/Edit/@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/ProductGroups/Delete/@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                            row++;
                        }
                    </tbody>
                </table>
            </div>

            <!-- نمایش موبایل -->
            <div class="d-block d-md-none">
                @foreach (var item in Model.ProductGroups.Where(pg => pg.ParentId == null))
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">@item.Title</h5>
                                <div class="btn-group btn-group-sm">
                                    <a href="/Admin/ProductGroups/Edit/@item.Id" class="btn btn-warning" title="ویرایش"><i class="fa fa-edit"></i></a>
                                    <a href="/Admin/ProductGroups/Delete/@item.Id" class="btn btn-danger" title="حذف"><i class="fa fa-remove"></i></a>
                                </div>
                            </div>

                            @if (Model.ProductGroups.Any(pg => pg.ParentId == item.Id))
                            {
                                <hr />
                                <ul class="list-unstyled mb-0">
                                    @foreach (var sub in Model.ProductGroups.Where(pg => pg.ParentId == item.Id))
                                    {
                                        <li class="mb-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-semibold">@sub.Title</span>
                                                <div class="btn-group btn-group-sm">
                                                   
                                                    <a href="/Admin/ProductGroups/Edit/@sub.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                                    <a href="/Admin/ProductGroups/Delete/@sub.Id" class="btn btn-danger"><i class="fa fa-remove"></i></a>
                                                </div>
                                            </div>

                                            @if (Model.ProductGroups.Any(pg => pg.ParentId == sub.Id))
                                            {
                                                <ul class="list-unstyled ms-3 mt-1">
                                                    @foreach (var sub2 in Model.ProductGroups.Where(pg => pg.ParentId == sub.Id))
                                                    {
                                                        <li class="d-flex justify-content-between align-items-center small">
                                                            <span>@sub2.Title</span>
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="/Admin/ProductGroups/Edit/@sub2.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                                                <a href="/Admin/ProductGroups/Delete/@sub2.Id" class="btn btn-danger"><i class="fa fa-remove"></i></a>
                                                            </div>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
