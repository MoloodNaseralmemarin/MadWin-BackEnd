@using Shop2City.WebHost.ViewModels.CommissionRates
@model DiscountsEditViewModel
@{
    ViewData["Title"] = "ویرایش کارمزد";
}
<div class="container py-4" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold mb-1">ویرایش @Model.PartCount قسمت @(Model.IsEqualParts ? "مساوی" : "نامساوی")</h4>
                    </div>

                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <!-- Cost -->
                            <div class="col-12 col-md-6">
                                <label asp-for="CommissionPercent" class="form-label fw-semibold">کارمزد به ٪</label>
                                <div class="input-group">
                                    <span class="input-group-text">%</span>
                                    <input asp-for="CommissionPercent"
                                           id="Cost"
                                           class="form-control text-end"
                                           type="number"
                                           min="0"
                                           placeholder="مثلاً 90"
                                           required
                                           autocomplete="off" />
                                </div>
                                <div id="CostPreview" class="form-text text-primary mt-2 fw-semibold"></div>
                                <div class="invalid-feedback d-block">
                                    <span asp-validation-for="CommissionPercent"></span>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-center mt-4">
                                <a asp-action="Index" class="btn btn-outline-secondary w-100 w-md-auto mb-2 mb-md-0 px-4 py-2">
                                    <i class="bi bi-x-circle me-1"></i> انصراف
                                </a>

                                <button type="submit" id="submitBtn" class="btn btn-success w-100 w-md-auto px-4 py-2">
                                    <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                                    <i class="bi bi-check-circle me-1"></i> ثبت تغییرات
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="mt-3 small text-muted text-center">
                        نکته: فیلدهای ضروری با پیام خطا مشخص می‌شوند.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>