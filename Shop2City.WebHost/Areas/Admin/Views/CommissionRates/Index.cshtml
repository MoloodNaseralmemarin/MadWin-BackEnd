@using MadWin.Application.DTOs.CommissionRates
@using Shop2City.Core.Convertors
@using Shop2City.WebHost.ViewModels.Orders
@model IEnumerable<CommissionRateDto>
@{
    ViewData["Title"] = "فهرست کارمزد";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card p-3">
            <h4 class="mb-3">فهرست کارمزد</h4>
            <!-- نمایش به صورت جدول در دسکتاپ -->
            <div class="table-responsive-md d-none d-md-block">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>تاریخ ویرایش</th>
                            <th>تقسیم بندی عرض پرده</th>
                            <th>درصد کارمزد</th>
                            <th>ویرایش</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LastUpdateDate.ToShamsi()</td>
                                <td>@item.PartCount قسمت @(item.IsEqualParts ? "مساوی" : "نامساوی")</td>
                                <td>@item.CommissionPercent%</td>
                                <td class="text-center">
                                    <a asp-controller="CommissionRates" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- نمایش به صورت کارت در موبایل -->
            <div class="d-block d-md-none">
                @foreach (var item in Model)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.PartCount</h5>
                            <p class="card-text"><strong>تاریخ:</strong> @item.LastUpdateDate.ToShamsi()</p>
                            <p class="card-text"><strong>تقسیم بندی عرض پرده</strong>@item.PartCount قسمت @(item.IsEqualParts ? "مساوی" : "نامساوی")</p>
                            <p class="card-text"><strong>درصد کارمزد:</strong> @item.CommissionPercent%</p>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                <a asp-controller="CommissionRates" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
