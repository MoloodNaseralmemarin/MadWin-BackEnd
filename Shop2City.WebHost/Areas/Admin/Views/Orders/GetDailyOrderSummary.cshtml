@using MadWin.Core.DTOs.Orders
@using Shop2City.Core.Convertors
@model List<DailyOrderSummaryDto>

@{
    ViewBag.Title = "گزارش روزانه سفارش‌ها";

    var currentFromDate = Context.Request.Query["FromDate"].ToString();
    var currentToDate = Context.Request.Query["ToDate"].ToString();
}

<div class="container mt-4">
    <div class="card shadow-sm border-info">
        <div class="card-header bg-info text-white fw-bold">
            فیلتر گزارش روزانه
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">از تاریخ</label>
                    <input type="text" name="FromDate" value="@currentFromDate" class="form-control" autocomplete="off" placeholder="مثال: 1402/01/01" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">تا تاریخ</label>
                    <input type="text" name="ToDate" value="@currentToDate" class="form-control" autocomplete="off" placeholder="مثال: 1402/01/31" />
                </div>

                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">اعمال فیلتر</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="container mt-4">
        <h4 class="mb-4 fw-bold text-center">گزارش روزانه سفارش‌ها</h4>

        <div class="row g-4">
            @foreach (var group in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <div class="card-header bg-secondary text-white rounded-top text-center">
                            <h6 class="mb-0">تاریخ: @group.Date?.ToShamsi()</h6>
                            <h6 class="mb-0">کاربر: @group.FullName</h6>
                        </div>

                        <div class="card-body">
                            <div class="border rounded p-2 mb-3 bg-light">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold text-success">سفارش‌های تسویه</span>
                                    <span class="fw-bold text-success">@group.FinalOrderCount</span>
                                </div>
                                <div class="d-flex justify-content-between mt-1">
                                    <span>مبلغ تسویه</span>
                                    <span class="text-success">@group.FinalTotalPrice.ToString("N0") ریال</span>
                                </div>
                            </div>

                            <div class="border rounded p-2 bg-light">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold text-danger">سفارش‌های باز</span>
                                    <span class="fw-bold text-danger">@group.OpenOrderCount</span>
                                </div>
                                <div class="d-flex justify-content-between mt-1">
                                    <span>مبلغ باز</span>
                                    <span class="text-danger">@group.OpenTotalPrice.ToString("N0") ریال</span>
                                </div>
                            </div>

                            @* دکمه نمایش جزئیات همه سفارش‌ها در یک مودال *@
                            <div class="mt-3">
                                <button class="btn btn-sm btn-outline-secondary w-100" type="button" data-bs-toggle="modal" data-bs-target="#ordersModal-@group.FullName.Replace(" ", "")-@group.Date?.ToString("yyyyMMdd")">
                                    مشاهده جزئیات سفارش‌ها
                                </button>
                                @await Html.PartialAsync("_DailyOrderDetailsPartial", group)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="alert alert-warning text-center shadow-sm fs-5">
            گزارشی برای نمایش وجود ندارد
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/datepicker/datepicker-config.js"></script>
}
