@using Azure.Core
@using MadWin.Core.DTOs.Users
@using Shop2City.Core.Convertors
@model UserForAdminViewModel
@{
    ViewBag.Title = "لیست کاربران";
    var currentFilter = (Context.Request.Query["filterFirstName"].ToString() ?? "");
    int visiblePages = 3; // تعداد صفحات قبل و بعد از صفحه فعلی
    int startPage = Math.Max(Model.currentPage - visiblePages, 1);
    int endPage = Math.Min(Model.currentPage + visiblePages, Model.countPage);
}

<div class="container-fluid my-3">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">لیست کاربران</h5>
            <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus"></i> ثبت کاربر جدید
            </a>
        </div>

        <div class="card-body">
            <!-- فرم جستجو -->
            <form class="mb-3">
                <div class="row g-2">
                    <div class="col-12 col-md-8">
                        <input type="text" class="form-control"
                               name="filterFirstName"
                               placeholder="نام را وارد کنید..."
                               value="@currentFilter" />
                    </div>
                    <div class="col-12 col-md-4 d-flex">
                        <button type="submit" class="btn btn-primary flex-fill me-2">
                            <i class="fa fa-search"></i>
                        </button>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                           class="btn btn-secondary flex-fill">
                            <i class="fa fa-refresh"></i>
                        </a>
                    </div>
                </div>
            </form>

            <!-- نمایش به صورت جدول (فقط دسکتاپ و تبلت) -->
            <div class="table-responsive-md d-none d-md-block">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>شناسه</th>
                            <th>نام کامل</th>
                            <th>شماره همراه</th>
                            <th>تاریخ و ساعت ثبت نام</th>
                            <td>تعداد سفارش</td>
                            <td>تعداد فاکتور</td>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.CellPhone</td>
                                <td>@user.CreateDate.ToShamsi()- @user.CreateDate.ToString("HH:mm:ss")</td>
                                <td>@user.OrderCount</td>
                                <td>@user.FactorCount</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Edit", "Users", new { area = "Admin", id = user.Id })"
                                           class="btn btn-warning btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <button class="btn btn-danger btn-sm"
                                                data-id="@user.Id"
                                                data-url="@Url.Action("Delete", "Users", new { area = "Admin" })"
                                                data-name="@user.FirstName @user.LastName">
                                            <i class="fa fa-remove"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- نمایش به صورت کارت (فقط موبایل) -->
            <div class="d-block d-md-none">
                <div class="row g-2">
                    @foreach (var user in Model.Users)
                    {
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h6 class="card-title">@user.FirstName @user.LastName</h6>
                                    <p class="card-text mb-1"><strong>شناسه:</strong> @user.Id</p>
                                    <p class="card-text mb-1"><strong>شماره همراه:</strong> @user.CellPhone</p>
                                    <p class="card-text mb-1"><strong>تاریخ ثبت‌نام:</strong> @user.CreateDate.ToShamsi()</p>
                                    <p class="card-text mb-1"><strong>تعداد سفارش:</strong> @user.OrderCount</p>
                                    <p class="card-text mb-1"><strong>تعدا فاکتور</strong> @user.FactorCount</p>
                                    <div class="d-flex justify-content-end mt-2">
                                        <a href="@Url.Action("Edit", "Users", new { area = "Admin", id = user.Id })"
                                           class="btn btn-warning btn-sm me-2">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                                <button class="btn btn-danger btn-sm"
                                                data-id="@user.Id"
                                                data-url="@Url.Action("Delete", "Users", new { area = "Admin" })"
                                                data-name="@user.FirstName @user.LastName">
                                            <i class="fa fa-remove"></i>
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- صفحه‌بندی -->
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm flex-wrap justify-content-center mt-3">
                    @* دکمه صفحه قبل *@
                    <li class="page-item @(Model.currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Users", new { area = "Admin", pageId = Model.currentPage - 1, filterFirstName = currentFilter })">قبل</a>
                    </li>

                    @* صفحات وسطی *@
                    @for (var i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", "Users", new { area = "Admin", pageId = i, filterFirstName = currentFilter })">@i</a>
                        </li>
                    }

                    @* دکمه صفحه بعد *@
                    <li class="page-item @(Model.currentPage == Model.countPage ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Users", new { area = "Admin", pageId = Model.currentPage + 1, filterFirstName = currentFilter })">بعد</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<script>
       document.querySelectorAll(".btn-danger").forEach(function(btn){
           
        btn.addEventListener("click", function () {
            const fullName = btn.dataset.name;
            const userId = btn.dataset.id;
            const url = btn.dataset.url + "/" + userId;
            Swal.fire({
                title: `آیا از حذف ${fullName} مطمئن هستید؟`,
                text: 'این کار قابل بازگشت نیست!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'بله',
                cancelButtonText: 'لغو',
                heightAuto: false
            }).then((result) => {
                if(result.isConfirmed){
                    fetch(url, {
                        method: 'POST' // یا 'DELETE' بسته به کنترلر
                    })
                    .then(res => {
                        if(res.ok){
                            toastr.success(`${fullName} با موفقیت حذف شد`);
                            // حذف ردیف جدول یا کارت
                            btn.closest("tr")?.remove();
                            btn.closest(".card")?.remove();
                        } else {
                            toastr.error('حذف انجام نشد');
                        }
                    })
                    .catch(()=> toastr.error('حذف انجام نشد'));
                }
            });
        });
    });

</script>


