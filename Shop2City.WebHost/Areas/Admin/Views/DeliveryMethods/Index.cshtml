@using MadWin.Core.DTOs.DeliveryMethods
@using Shop2City.Core.Convertors
@model IEnumerable<DeliveryMethodForAdmin>

@{
    ViewBag.Title = "شیوه ارسال";
}

<div class="container-fluid my-3">
    <div class="card shadow-sm">
        <div class="card-body">

            <!-- نمایش به صورت جدول (فقط دسکتاپ و تبلت) -->
            <div class="table-responsive-md d-none d-md-block">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>تاریخ ویرایش</th>
                            <th>عنوان</th>
                            <th>قیمت</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var discount in Model)
                        {
                            <tr>
                                <td>@discount.UpdatedAt.ToShamsi()</td>
                                <td>@discount.Name</td>
                                <td>@discount.Cost</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Edit", "DeliveryMethods", new { area = "Admin", id = discount.Id })"
                                           class="btn btn-warning btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- نمایش به صورت کارت (فقط موبایل) -->
            <div class="d-block d-md-none">
                <div class="row g-3">
                    @foreach (var discount in Model)
                    {
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2">@discount.Name</h6>
                                    <div class="mb-1"><strong>تاریخ بروزرسانی:</strong> @discount.UpdatedAt.ToString("N0")</div>
                                    <div class="mb-1"><strong>قیمت:</strong> @discount.Cost</div>

                                    <div class="d-flex justify-content-end mt-2 gap-2">
                                        <a href="@Url.Action("Edit", "DeliveryMethods", new { area = "Admin", id = discount.Id })"
                                           class="btn btn-warning btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>