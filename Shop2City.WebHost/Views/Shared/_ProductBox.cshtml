@using MadWin.Core.DTOs.Products
@model ShowProductListItemViewModel

<div class="card shadow-lg border-0 rounded-3 mb-4">
    <div class="image">
        <img src="~/images/products/thumb/@Model.FileName" alt="@Model.Title" title="@Model.Title" class="card-img-top img-fluid rounded-3" />
    </div>

    <div class="card-body">
       
        @{
            string titleText = string.IsNullOrEmpty(Model.Title) ? "" : Model.Title.Replace("ضخامت", "<br/>ضخامت");
            string shortDescription = string.IsNullOrEmpty(Model.ShortDescription) ? "" : Model.ShortDescription.Replace("-", "<br/>");
        }

        <h5>@Html.Raw(titleText)</h5>

        <p class="card-text text-muted">@Model.ShortDescription</p>

        <p class="card-text">
            @if (Model.IsStatus)
            {
                <span class="price text-success fs-5">@Model.Price.ToString("#,0 ریال")</span>
            }
            else
            {
                <span class="text-danger fs-6">ناموجود</span>
            }
        </p>
    </div>

    <div class="card-footer text-center">
        @if (Model.IsStatus)
        {
            <a class="btn btn-primary rounded-pill px-4 py-2" onclick="addToCart(@Model.Id)" role="button">
                <i class="bi bi-cart-plus"></i> افزودن به سبد خرید
            </a>
        }
        else
        {
            <span class="btn btn-danger rounded-pill" disabled>ناموجود</span>
        }
    </div>
</div>


<script src="~/js/cart/addToCart.js"></script>