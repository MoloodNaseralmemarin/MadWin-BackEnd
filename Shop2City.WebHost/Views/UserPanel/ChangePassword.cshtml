@using MadWin.Core.DTOs.Account
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="container">
    <!-- Breadcrumb Start-->
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a></li>
        <li><a asp-area="UserPanel" asp-controller="Home" asp-action="Index">پنل کاربری</a></li>
        <li class="active">تغییر کلمه عبور</li>
    </ul>
    <!-- Breadcrumb End-->
    <div class="row">
        <partial name="_SideBar" />
        <!--Middle Part Start-->
        <div>
            <h1 class="title">تغییر کلمه عبور</h1>
            <form class="form-horizontal" asp-action="ChangePassword" method="post">
                @if (ViewBag.IsSuccess != null)
                {
                <div class="alert alert-success">
                    کلمه عبور شما با موفقیت ویرایش شد.
                </div>
                }
                <fieldset id="account">
                    <legend>کلمه عبور جدید را وارد کنید</legend>
                    <div class="form-group required">
                        <label asp-for="currentPassword" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <input type="password" asp-for="currentPassword" class="form-control">
                        </div>
                    </div>

                    <div class="form-group required">
                        <label asp-for="password" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="password" type="password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label asp-for="confirmPassword" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <input type="password" asp-for="confirmPassword" class="form-control">
                        </div>
                    </div>
                </fieldset>
                <div class="buttons">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="pull-right">
                        <button class="btn btn-primary">تغییر کلمه عبور</button>
                    </div>
                </div>
            </form>
        </div>
        <!--Middle Part End -->
    </div>
</div>



